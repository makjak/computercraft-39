-- place next to two cobble generators.
-- One below, and one in front, place a chest above.
-- Will dig the cobble out, and place in chest until inventory and chest are full

while true do
	local count = 0
	for i=1,16,1 do
		count = count + turtle.getItemCount(i)
	end

	if count < 1024 then
		t.digDown()
		t.dig()
	else
		os.sleep(10)
	end

	turtle.dropUp()
end
