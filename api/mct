function checkFuel()
	if turtle.getFuelLevel() == 0 then
		refuel.run(1)
	end
end

function forward()
	checkFuel()

	return turtle.forward()
end

function back()
	checkFuel()

	return turtle.back()
end

function up()
	checkFuel()

	return turtle.up()
end

function down()
	checkFuel()

	return turtle.down()
end
