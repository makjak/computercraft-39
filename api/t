	miniCompact()

	if not fnCompare(1) then
		fnPlace(1)
	end
end]]--

local function naviscan()
	if t.detectUp() then
		blockmap.add(t.getLocUp())
		--naviPlace(t.compareUp, t.replaceUp)
	end
	if t.detectDn() then
		blockmap.add(t.getLocDn())
		--naviPlace(t.compareDn, t.replaceDn)
	end
	for i=1,3 do
		if t.detect() then
			blockmap.add(t.getLocFd())
			--naviPlace(t.compare, t.replace)
		end
		t.rt()
	end
	if t.detect() then
		blockmap.add(t.getLocFd())
		--naviPlace(t.compare, t.replace)
	end
end

function gotoAttackNavi(x,y,z)
	local h,cx,cy,cz = t.getLoc()

	while cx ~= x or cy ~= y or cz ~= z do
		local path = astar.findPath(x,y,z)

		for k,v in pairs(path) do
			if t.detect() then
				blockmap.add(t.getLocFd())
				--naviPlace(t.compare, t.replace)
			end
			if t.detectUp() then
				blockmap.add(t.getLocUp())
				--naviPlace(t.compareUp, t.replaceUp)
			end
			if t.detectDn() then
				blockmap.add(t.getLocDn())
				--naviPlace(t.compareDn, t.replaceDn)
			end

			if not t.gotoAttack(v.x,v.y,v.z) then
				print("goto failed")
				print(v.x..","..v.y..","..v.z)
				naviscan()
				break
			end
		end

		h, cx, cy, cz = t.getLoc()
	end
end
