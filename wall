-- scans inventory for building materials
function findMats()
	for i=3,16 do
		if turtle.getItemCount(i) > 0 then
			turtle.select(i)
			return true
		end
	end
	return false
end

-- finds the ground
-- and measures the distance to the ground
function goDown()
	local count = 0
	-- if i can move or there is air below me keep going
	-- this should handle things like grass and mobs properly
	while t.down() or not turtle.detectDown() do
		count = count + 1
	end

	return count
end

function buildUp(count)
	for i=1,count do
		t.up()
		if not findMats() then
			print("Out of building materials!")
			return false
		end
		turtle.placeDown()
	end

	return true
end

local args = { ... }

if #args < 2 then
	print( "wall height length" )
	return
end

local height = tonumber(args[1])
local length = tonumber(args[2])

goDown()

for i=1,length do
	if not findMats() then
		print("Out of building materials!")
		return
	end
	if not buildUp(height) then
		return
	end
	if i%5 == 0 then
		t.up()
		turtle.select(2)
		turtle.placeDown()
		t.forward()
		t.down()
	else
		t.forward()
	end
	height = goDown()
	findMats()
	turtle.placeDown()
end

